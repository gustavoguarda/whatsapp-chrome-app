{
  "name": "Whatsapp",
  "description": "Web WhatsApp",
  "version": "0.2",
  "minimum_chrome_version": "30",
  "author": [
    {
      "name": "Gustavo Guarda",
      "email": "gustavoguarda@gmail.com"
    }
  ],
  "app": {
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  },
  "icons": { "16": "whatsapp-16.png", "128": "whatsapp-128.png" },
  "permissions": [
    "webview",
    "audioCapture",
    "videoCapture",
    "storage"
  ],
  "webview": {
    "partitions": [
      {
        "name": "whatsapp",
        "accessible_resources": [""]
      }
    ]
  }
}